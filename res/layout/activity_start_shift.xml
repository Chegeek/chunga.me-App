<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:gravity="center"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/tool_bar_top_padding"
		android:minHeight="?attr/actionBarSize"
		android:background="@color/bg"
		app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
	
	<ScrollView
	    android:id="@+id/scollView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/toolbar"
		android:fillViewport="true"
		android:background="@android:color/white" >
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="16dp" >
			
		    <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/station"
	            android:textSize="18sp"
	            android:textColor="@color/bg" />
		        
	        <Spinner
		        android:id="@+id/stationSpinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp" />
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/ranch"
	            android:textSize="18sp"
	            android:textColor="@color/bg" />
	        
	        <Spinner
		        android:id="@+id/ranchSpinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp" />
	        
	        <EditText
		        android:id="@+id/leaderView"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="@string/leader"
		        android:textColorHint="@color/bg"
		        android:layout_marginBottom="2dp" />
	        
	        <EditText
		        android:id="@+id/noOfMembersView"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="@string/no_of_members"
		        android:textColorHint="@color/bg"
		        android:layout_marginBottom="2dp"
		        android:inputType="number" />
	        
	        <EditText
		        android:id="@+id/routeView"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="@string/route"
		        android:textColorHint="@color/bg"
		        android:layout_marginBottom="10dp" />
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/mode"
	            android:textSize="18sp"
	            android:textColor="@color/bg" />
	        
	        <Spinner
		        android:id="@+id/modeSpinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp" />
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/weather"
	            android:textSize="18sp"
	            android:textColor="@color/bg" />
	        
	        <Spinner
		        android:id="@+id/weatherSpinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="10dp" />
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
	            
	            <EditText
			        android:id="@+id/startWPView"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:hint="@string/start_wp"
			        android:textColorHint="@color/bg"
			        android:layout_marginBottom="2dp"
			        android:layout_weight="1"
			        android:inputType="number" />
		        
		        <EditText
			        android:id="@+id/endWPView"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:hint="@string/end_wp"
			        android:textColorHint="@color/bg"
			        android:layout_marginBottom="2dp"
			        android:layout_weight="1"
			        android:inputType="number" />
	        
	        </LinearLayout>
	        
	        <EditText
		        android:id="@+id/purposeView"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="@string/purpose"
		        android:textColorHint="@color/bg"
		        android:layout_marginBottom="10dp" />
	        
			<Button
		        android:id="@+id/startShiftBtn"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/start_shift"
		        android:background="@color/bg"
		        android:textColor="@android:color/white"
		        android:layout_marginStart="5dp" />
			
	    </LinearLayout>
	</ScrollView>
</RelativeLayout>